rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow reading other users for search functionality
      allow read: if request.auth != null;
    }
    
    // Chat documents
    match /chats/{chatId} {
      // Allow read/write if user is a member of the chat
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
      // Allow create if user is in the members list
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.members;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read/write if user is a member of the parent chat
        allow read, write: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        // Allow create if user is the sender
        allow create: if request.auth != null && 
          request.auth.uid == request.resource.data.from;
      }
    }
  }
}